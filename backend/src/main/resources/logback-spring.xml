<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Console appender for regular logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Special console appender for audit logs with enhanced formatting -->
    <appender name="AUDIT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- Audit logger configuration -->
    <logger name="AUDIT_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_CONSOLE" />
    </logger>
    
    <!-- Security audit logger -->
    <logger name="com.jobportal.audit" level="DEBUG" additivity="false">
        <appender-ref ref="AUDIT_CONSOLE" />
    </logger>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- Set specific log levels for various components -->
    <logger name="org.springframework.security" level="DEBUG" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="com.jobportal.controller" level="DEBUG" />
    <logger name="com.jobportal.service" level="DEBUG" />
    
</configuration>
